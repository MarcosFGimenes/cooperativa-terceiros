rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    // Production rules: limit access to signed-in users and rely on server/Admin APIs for
    // administrative collections such as accessTokens or packageFolders mutations.
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /services/{serviceId} {
      allow read, write: if isSignedIn();

      match /{document=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /packages/{packageId} {
      allow read, write: if isSignedIn();
    }

    match /packageFolders/{folderId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    match /accessTokens/{tokenId} {
      allow read, write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
